@using Avionera.ViewModels;
@using Microsoft.AspNetCore.Identity;
@inject UserManager<AppUser> _userManager

@model UserViewModel

@{
    ViewData["Title"] = "Details";
    var currentUser = await _userManager.GetUserAsync(User);
}

<section style="background-color: #eee;">
    <div class="container py-5">
        <div class="row">
            <div class="col-lg-4">
                <div class="card mb-4">
                    <div class="card-body text-center">
                        <img src="@Model.ImageURL" alt="avatar"
                             class="rounded-circle img-fluid" style="width: 150px;">
                        <h5 class="my-3">@Model.FirstName @Model.MiddleName @Model.LastName</h5>
                        @if(currentUser.Id == Model.Id)
                        {
                            <div class="d-flex justify-content-center mb-2">
                                <a class="btn btn-primary" asp-controller="User" asp-action="EditProfile" asp-route-id="@Model.Id">Редактиране на профил</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
            <div class="col-lg-8">
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Пълно име</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.FirstName @Model.MiddleName @Model.LastName</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Ел. поща</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.Email</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">Тел. номер</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.PhoneNumber</p>
                            </div>
                        </div>
                        <hr>
                        <div class="row">
                            <div class="col-sm-3">
                                <p class="mb-0">ЕГН</p>
                            </div>
                            <div class="col-sm-9">
                                <p class="text-muted mb-0">@Model.CitizenNumber</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>