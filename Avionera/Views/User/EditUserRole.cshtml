@using Avionera.ViewModels;
@model UserRolesViewModel

<form asp-action="EditUserRole">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    @Html.HiddenFor(m => m.UserId)
    @Html.HiddenFor(m => m.CurrentRoleName)
    @Html.HiddenFor(m => m.AvailableRoles)
    <div style="height: 100%; display: flex; justify-content: center; align-items: center">
        <div>
            <h6>Администраторите не могат да си сменят собствената роля!</h6>
            @foreach (var item in Model.AvailableRoles)
            {
                <div class="form-check">
                    <label asp-for="SelectedRoleName" class="form-check-label">
                        <input asp-for="SelectedRoleName" class="form-check-input" type="radio" value="@item.Name">
                        @item.Name
                    </label>
                </div>
            }
            <div class="form-group">
                <input class="btn btn-outline-success float-right" type="submit" value="Запази" />
                <a class="btn btn-outline-secondary" onclick="history.go(-1)">Отказ</a>
            </div>
        </div>
    </div>
</form>