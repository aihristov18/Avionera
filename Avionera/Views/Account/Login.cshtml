@using Avionera.ViewModels
@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="row">
    <div class="col-md-6 offset-3">
        <p>
            <h4>Вписване</h4>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                <form asp-action="Login">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Username" class="control-label">Потребителско име</label>
                        <input asp-for="Username" class="form-control">
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label">Парола</label>
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group m-2">
                        <input class="btn btn-outline-success float right" type="submit" value="Вписване" />
                        <a class="btn btn-outline-secondary" onclick="history.go(-1)">Отказ</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>